<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://articoliClassificazioniListView.title"
      focusComponent="articoliClassificazionisDataGrid">
    <data>
        <collection id="articoliClassificazionisDc"
                    class="com.company.ecomShop.entity.ArticoliClassificazioni">
            <loader id="articoliClassificazionisDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="articoliClassificazionisDataGrid.create"/>
            <button id="editButton" action="articoliClassificazionisDataGrid.edit"/>
            <button id="removeButton" action="articoliClassificazionisDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="articoliClassificazionisDl"/>
        </hbox>
        <dataGrid id="articoliClassificazionisDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="articoliClassificazionisDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="classi"/>
                <column property="codiceArticolo"/>
                <column property="descrizione"/>
                <column property="prezzo"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
