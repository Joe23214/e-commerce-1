<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://marketnewstoreArtImgListView.title"
      focusComponent="marketnewstoreArtImgsDataGrid">
    <data>
        <collection id="marketnewstoreArtImgsDc"
                    class="com.company.ecomShop.entity.MarketnewstoreArtImg">
            <fetchPlan extends="_base">
                <property name="codiceArticolo"/>
                <property name="artImgPrincipale" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="marketnewstoreArtImgsDl" readOnly="true">
                <query>
                    <![CDATA[select e from MarketnewstoreArtImg e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="marketnewstoreArtImgsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="marketnewstoreArtImgsDataGrid.create"/>
            <button id="editButton" action="marketnewstoreArtImgsDataGrid.edit"/>
            <button id="removeButton" action="marketnewstoreArtImgsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="marketnewstoreArtImgsDl"/>
        </hbox>
        <dataGrid id="marketnewstoreArtImgsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="marketnewstoreArtImgsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="codiceArticolo"/>
                <column property="artImgPrincipale"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
