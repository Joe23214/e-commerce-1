<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://art2DetailView.title"
      focusComponent="form">
    <data>
        <instance id="art2Dc"
                  class="com.company.ecomShop.entity.Art2">
            <fetchPlan extends="_base"/>
            <loader id="art2Dl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="art2Dc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="idCodBarForField" property="id.codBarFor"/>
            <textField id="idCodiceArticoloField" property="id.codiceArticolo"/>
            <textField id="idFlagBFField" property="id.flagBF"/>
            <textField id="coefficienteField" property="coefficiente"/>
            <dateTimePicker id="createTsField" property="createTs"/>
            <textField id="createdByField" property="createdBy"/>
            <textField id="descrBarreField" property="descrBarre"/>
            <textField id="fornitoreField" property="fornitore"/>
            <textField id="percPrezzoConfField" property="percPrezzoConf"/>
            <textField id="prezzoField" property="prezzo"/>
            <textField id="prezzoConfezioneField" property="prezzoConfezione"/>
            <textField id="tipoPesoField" property="tipoPeso"/>
            <dateTimePicker id="updateTsField" property="updateTs"/>
            <textField id="updatedByField" property="updatedBy"/>
            <textField id="versionField" property="version"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
