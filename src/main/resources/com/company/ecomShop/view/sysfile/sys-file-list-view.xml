<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://sysFileListView.title"
      focusComponent="sysFilesDataGrid">
    <data>
        <collection id="sysFilesDc"
                    class="com.company.ecomShop.entity.SysFile">
            <fetchPlan extends="_base"/>
            <loader id="sysFilesDl" readOnly="true">
                <query>
                    <![CDATA[select e from SysFile e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="sysFilesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="sysFilesDataGrid.create"/>
            <button id="editButton" action="sysFilesDataGrid.edit"/>
            <button id="removeButton" action="sysFilesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="sysFilesDl"/>
        </hbox>
        <dataGrid id="sysFilesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="sysFilesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="createDate"/>
                <column property="createTs"/>
                <column property="createdBy"/>
                <column property="deleteTs"/>
                <column property="deletedBy"/>
                <column property="ext"/>
                <column property="fileSize"/>
                <column property="name"/>
                <column property="sysTenant"/>
                <column property="updateTs"/>
                <column property="updatedBy"/>
                <column property="version"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
