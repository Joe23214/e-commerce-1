<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://pdcPasswordListView.title"
      focusComponent="pdcPasswordsDataGrid">
    <data>
        <collection id="pdcPasswordsDc"
                    class="com.company.ecomShop.entity.PdcPassword">
            <fetchPlan extends="_base"/>
            <loader id="pdcPasswordsDl" readOnly="true">
                <query>
                    <![CDATA[select e from PdcPassword e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="pdcPasswordsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="pdcPasswordsDataGrid.create"/>
            <button id="editButton" action="pdcPasswordsDataGrid.edit"/>
            <button id="removeButton" action="pdcPasswordsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="pdcPasswordsDl"/>
        </hbox>
        <dataGrid id="pdcPasswordsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="pdcPasswordsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="codice"/>
                <column property="password"/>
                <column property="username"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
