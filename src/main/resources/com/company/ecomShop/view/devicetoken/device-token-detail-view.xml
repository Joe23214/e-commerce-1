<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://deviceTokenDetailView.title"
      focusComponent="form">
    <data>
        <instance id="deviceTokenDc"
                  class="com.company.ecomShop.entity.DeviceToken">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="deviceTokenDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="deviceTokenDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <checkbox id="enabledField" property="enabled"/>
            <dateTimePicker id="lastSeenField" property="lastSeen"/>
            <textField id="platformField" property="platform"/>
            <textField id="tokenField" property="token"/>
            <textField id="userField" property="user"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
