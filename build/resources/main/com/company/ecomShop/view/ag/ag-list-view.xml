<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://agListView.title"
      focusComponent="agsDataGrid">
    <data>
        <collection id="agsDc"
                    class="com.company.ecomShop.entity.Ag">
            <fetchPlan extends="_base">
                <property name="codice"/>
            </fetchPlan>
            <loader id="agsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Ag e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="agsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="agsDataGrid.create"/>
            <button id="editButton" action="agsDataGrid.edit"/>
            <button id="removeButton" action="agsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="agsDl"/>
        </hbox>
        <dataGrid id="agsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="agsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="codice"/>
                <column property="cap"/>
                <column property="cessAttGma"/>
                <column property="createTs"/>
                <column property="createdBy"/>
                <column property="descrizione"/>
                <column property="flagDepo"/>
                <column property="indirizzo"/>
                <column property="localita"/>
                <column property="pIva"/>
                <column property="provStand"/>
                <column property="updateTs"/>
                <column property="updatedBy"/>
                <column property="version"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
