<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://deviceTokenListView.title"
      focusComponent="deviceTokensDataGrid">
    <data>
        <collection id="deviceTokensDc"
                    class="com.company.ecomShop.entity.DeviceToken">
            <fetchPlan extends="_base">
                <property name="id"/>
            </fetchPlan>
            <loader id="deviceTokensDl" readOnly="true">
                <query>
                    <![CDATA[select e from DeviceToken e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="deviceTokensDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="deviceTokensDataGrid.create"/>
            <button id="editButton" action="deviceTokensDataGrid.edit"/>
            <button id="removeButton" action="deviceTokensDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="deviceTokensDl"/>
        </hbox>
        <dataGrid id="deviceTokensDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="deviceTokensDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="enabled"/>
                <column property="lastSeen"/>
                <column property="platform"/>
                <column property="token"/>
                <column property="user"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
