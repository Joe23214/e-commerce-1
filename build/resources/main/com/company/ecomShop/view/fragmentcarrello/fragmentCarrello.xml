<fragment xmlns="http://jmix.io/schema/flowui/fragment">
    <data>
        <instance id="item" class="com.company.ecomShop.entity.CarrelloRiga"/>
        <instance id="item2" class="com.company.ecomShop.entity.Art">
            <loader id="artLoader">
                <query>
                    <![CDATA[
                        select a from Art a where a.codiceArticolo = :codiceArticolo
                    ]]>
                </query>
            </loader>
        </instance>
    </data>
    <content>
        <hbox id="root" classNames="cart-item">
            <!-- Immagine -->
            <image id="img" classNames="cart-img"/>

            <vbox classNames="cart-details">
                <!-- Descrizione -->
                <span id="descrizione" classNames="cart-title"/>

                <!-- Prezzo + Totale -->
                <hbox classNames="cart-price-row">
                    <span id="prezzo" classNames="cart-price"/>
                    <span id="valoreTotale" classNames="cart-total"/>
                </hbox>

                <!-- Quantità + unità + elimina -->
                <hbox classNames="cart-actions">
                    <button id="decrementaQta" text="-" classNames="qty-btn"/>
                    <integerField id="quantitaField" classNames="qty-field" min="0"/>
                    <button id="incrementaQta" text="+" classNames="qty-btn"/>
                    <span id="unitaMisura" classNames="cart-unit"/>
                    <icon icon="vaadin:trash" id="eliminaRiga" classNames="cart-remove"/>
                </hbox>
            </vbox>
        </hbox>
    </content>
</fragment>