<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://configEcomListView.title"
      focusComponent="configEcomsDataGrid">
    <data>
        <collection id="configEcomsDc"
                    class="com.company.ecomShop.entity.ConfigEcom">
            <fetchPlan extends="_base">
                <property name="cfg"/>
            </fetchPlan>
            <loader id="configEcomsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ConfigEcom e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="configEcomsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="configEcomsDataGrid.create"/>
            <button id="editButton" action="configEcomsDataGrid.edit"/>
            <button id="removeButton" action="configEcomsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="configEcomsDl"/>
        </hbox>
        <dataGrid id="configEcomsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="configEcomsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="cfg"/>
                <column property="cap"/>
                <column property="citta"/>
                <column property="createTs"/>
                <column property="createdBy"/>
                <column property="indirizzo"/>
                <column property="linkFacebook"/>
                <column property="linkInstagram"/>
                <column property="linkTiktok"/>
                <column property="mail"/>
                <column property="oreScarto"/>
                <column property="pIva"/>
                <column property="pec"/>
                <column property="provincia"/>
                <column property="qtaGiacenzaGiallo"/>
                <column property="qtaGiacenzaRosso"/>
                <column property="ragSoc"/>
                <column property="sdi"/>
                <column property="telefono"/>
                <column property="testoFooter"/>
                <column property="updateTs"/>
                <column property="updatedBy"/>
                <column property="version"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
