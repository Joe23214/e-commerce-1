<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://comuniDetailView.title"
      focusComponent="form">
    <data>
        <instance id="comuniDc"
                  class="com.company.ecomShop.entity.Comuni">
            <fetchPlan extends="_base"/>
            <loader id="comuniDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="comuniDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="codiceField" property="codice"/>
            <textField id="capField" property="cap"/>
            <textField id="comuneField" property="comune"/>
            <dateTimePicker id="createTsField" property="createTs"/>
            <textField id="createdByField" property="createdBy"/>
            <textField id="nazioneField" property="nazione"/>
            <textField id="provinciaField" property="provincia"/>
            <textField id="regioneField" property="regione"/>
            <dateTimePicker id="updateTsField" property="updateTs"/>
            <textField id="updatedByField" property="updatedBy"/>
            <textField id="versionField" property="version"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
