<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://artSchedaListView.title"
      focusComponent="artSchedasDataGrid">
    <data>
        <collection id="artSchedasDc"
                    class="com.company.ecomShop.entity.ArtScheda">
            <fetchPlan extends="_base">
                <property name="codiceArticolo"/>
            </fetchPlan>
            <loader id="artSchedasDl" readOnly="true">
                <query>
                    <![CDATA[select e from ArtScheda e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="artSchedasDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="artSchedasDataGrid.create"/>
            <button id="editButton" action="artSchedasDataGrid.edit"/>
            <button id="removeButton" action="artSchedasDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="artSchedasDl"/>
        </hbox>
        <dataGrid id="artSchedasDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="artSchedasDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="codiceArticolo"/>
                <column property="altezza"/>
                <column property="artconpackage"/>
                <column property="artpackage"/>
                <column property="codiceArticoloPadre"/>
                <column property="codiceArticoloSostituto"/>
                <column property="codificags1"/>
                <column property="colore"/>
                <column property="createTs"/>
                <column property="createdBy"/>
                <column property="ctxstr"/>
                <column property="flagArticoloDiServizio"/>
                <column property="flagDistintaVendita"/>
                <column property="flagEspositoreCarichi"/>
                <column property="flagPesoArticolo"/>
                <column property="flagSconfezionamento"/>
                <column property="flagSostituto"/>
                <column property="ggAllertScadenza"/>
                <column property="ggconsegna"/>
                <column property="larghezza"/>
                <column property="lunghezza"/>
                <column property="note2"/>
                <column property="percorsodefault"/>
                <column property="pzxct"/>
                <column property="stagione"/>
                <column property="strxped"/>
                <column property="taglia"/>
                <column property="updateTs"/>
                <column property="updatedBy"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
